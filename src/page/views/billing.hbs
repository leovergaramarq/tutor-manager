{{> navbar }}
<main>
    <section class="section-payment">
        <h1>Pago</h1>
        <div class="area-calculation">
            <div class="row">
                <span class="step">
                    <span class="fraction">
                        <span class="numerator">
                            <span class="value">2.5</span>
                            <span class="times"></span>
                            <span class="value">
                                <input type="number" id="minutesWaiting" placeholder="Minutos de espera">
                            </span>
                            <span class="plus"></span>
                            <span class="value">
                                <input type="number" id="usdPerHour" placeholder="Pago por hora" value="5">
                            </span>
                            <span class="times"></span>
                            <span class="value">
                                <input type="number" id="minutesInSession" placeholder="Minutos en sesión">
                            </span>
                        </span>
                        <hr>
                        <span class="denominator">
                            <span class="value">60</span>
                        </span>
                    </span>
                </span>
                <span class="equals"></span>
                <span class="step">
                    <span class="value">
                        <input type="number" class="payment-result1" readonly>
                        USD
                    </span>
                </span>
            </div>
            <div class="row">
                <span class="step">
                    <span class="value">
                        <input type="number" readonly class="payment-result1">
                    </span>
                    <span class="plus"></span>
                    <span class="value">
                        <input type="number" readonly placeholder="Bonus" id="bonus">
                    </span>
                </span>
                <span class="equals"></span>
                <span class="step">
                    <span class="value">
                        <input type="number" class="payment-result2" readonly>
                        USD
                    </span>
                </span>
            </div>
            <div class="row">
                <span class="step">
                    <span class="value">
                        <input type="number" readonly class="payment-result2">
                    </span>
                    <span class="times"></span>
                    <span class="value">
                        <input type="number" id="usd" placeholder="Precio dólar">
                    </span>
                </span>
                <span class="equals"></span>
                <span class="step">
                    <span class="value">
                        <input type="number" class="payment-result3 result" readonly>
                        COP
                    </span>
                </span>
            </div>
        </div>
    </section>
    <section class="section-time">
        <h1>Tiempo Trabajado</h1>
        <div class="area-calculation">
            <div class="row">
                <span class="step">
                    <span class="fraction">
                        <span class="numerator">
                            <span class="value">
                                <input type="number" id="onlineHours" placeholder="Horas online">
                            </span>
                        </span>
                        <hr>
                        <span class="denominator">
                            <span class="value">
                                <input type="number" id="scheduledHours" placeholder="Horas agendadas">
                            </span>
                        </span>
                    </span>
                </span>
                <span class="equals"></span>
                <span class="step">
                    <span class="value">
                        <input type="number" class="time-result" readonly>
                        %
                    </span>
                </span>
            </div>
        </div>
    </section>
    <div class="section-buttons">
        <button class="btn-secondary" id="reset">Restablecer</button>
        <button class="btn-primary" id="refresh">Actualizar</button>
    </div>
</main>
<script type="module" src="/js/billing.js"></script>